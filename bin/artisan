#!/usr/bin/env bash

# Check if DEBUG environment variable is set
if [ "$DEBUG" = "1" ]; then
    echo "üêõ Running with Xdebug enabled..."
    docker-compose exec -e XDEBUG_TRIGGER=1 -e PHP_IDE_CONFIG="serverName=Laravel Docker" app php artisan "$@"
else
    docker-compose exec app php artisan "$@"
fi
